datasource db {
  url      = env("DATABASE_URL")
  provider = "mysql"
}

generator client {
  provider = "prisma-client-js"
}


model BikeRentHistory {
  id          Int      @unique @default(autoincrement())
  bikeId      Int
  candidateId Int
  status      String
  cost        Int
  rentDate    DateTime
  returnDate  DateTime
  bike        Bike     @relation(fields: [bikeId], references: [id])
  candidate        Candidate     @relation(fields: [candidateId], references: [id])

  @@id([id, bikeId, candidateId])

}

model Bike {
  id          Int        @unique @default(autoincrement())
  candidateId Int
  name        String
  type        String
  bodySize    Int
  maxLoad     Int
  rate        Int
  description String     @db.VarChar(200)
  ratings     Float
  imageUrls   ImageUrl[]
  candidate   Candidate  @relation(fields: [candidateId], references: [id])
  bikeRentHistories BikeRentHistory[]

  @@id([id, candidateId])
}

model ImageUrl {
  id     Int    @unique @default(autoincrement())
  bikeId Int
  url    String
  bike   Bike   @relation(fields: [bikeId], references: [id])

  @@id([id, bikeId])
}

model User {
  id          Int       @unique @default(autoincrement())
  candidateId Int
  name        String
  email       String    @unique
  password    String
  candidate   Candidate @relation(fields: [candidateId], references: [id])

  @@id([id, candidateId])
}

model Candidate {
  id    Int    @id @default(autoincrement())
  name  String
  email String @unique
  token String @unique
  users User[]
  bikes Bike[]
  bikeRentHistories BikeRentHistory[]
}
